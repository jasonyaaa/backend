# =============================================================================
# VocalBorn Backend 環境配置檔案
# =============================================================================
# 此檔案定義了應用程式所需的所有環境變數
# 複製此檔案為 .env 並填入實際值

# =============================================================================
# 應用程式基本設定
# =============================================================================
APP_NAME="VocalBorn API"
APP_VERSION="1.0.0"
ENVIRONMENT="development"  # development, staging, production
DEBUG=true
HOST="0.0.0.0"
PORT=8000
BASE_URL="http://localhost:8000"

# =============================================================================
# 安全設定
# =============================================================================
# 使用以下命令生成安全的密鑰：
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY="changethis-use-a-secure-secret-key-at-least-32-chars"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# 資料庫設定
# =============================================================================
# 請嚴格檢查 DB_NAME 是否正確 如要進行測試請開啟測試資料庫
DB_ADDRESS="localhost"
DB_PORT=5432
DB_USER="vocalborn_user"
DB_PASSWORD="changethis"

# 正式資料庫
# DB_NAME="vocalborn_db"
# 測試資料庫
DB_NAME="vocalborn_0528_db"

# =============================================================================
# Redis 配置 (用於 Celery 和快取)
# =============================================================================
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_DB_BROKER=0
REDIS_DB_BACKEND=1
# REDIS_PASSWORD=""  # 如果需要密碼驗證請設定

# =============================================================================
# Celery 配置
# =============================================================================
CELERY_LOG_LEVEL="INFO"
CELERY_WORKER_CONCURRENCY=4
CELERY_WORKER_MAX_TASKS_PER_CHILD=1000

# =============================================================================
# 電子郵件服務設定
# =============================================================================
EMAIL_SERVICE_HOST="smtp.gmail.com"
EMAIL_SERVICE_PORT=587
EMAIL_USE_TLS=true
EMAIL_USERNAME="your-email@gmail.com"
EMAIL_PASSWORD="your-app-password"
EMAIL_FROM="noreply@vocalborn.com"

# =============================================================================
# MinIO 物件儲存設定
# =============================================================================
MINIO_ENDPOINT="localhost:9000"
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
MINIO_BUCKET_NAME="vocalborn-files"
MINIO_SECURE=false  # 本地開發使用 HTTP

# =============================================================================
# AI 分析服務設定
# =============================================================================
GEMINI_API_KEY="your_api_key_here"

# =============================================================================
# 日誌設定
# =============================================================================
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# =============================================================================
# CORS 設定
# =============================================================================
# 允許的來源列表，用逗號分隔
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000"